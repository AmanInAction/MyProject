<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h3><b><i><%= listing.title %></i></b></h3>
        <div class="col-8 offset-2">
        </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <%= listing.description %> <br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
            </p>
        </div>
    </div>
    <br>
 </div>
 <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3">Edit</a>
        <form method="post" action="/listings/<%= listing._id %>/?_method=DELETE"></form>
        <button class="btn btn-dark col-1 offset-4">delete </button>
    </div>